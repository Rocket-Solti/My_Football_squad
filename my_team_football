print('Welcome to my football Roster programm ')
roster=[]
player=input('\nWho is your goal keeper :').title()
roster.append(player)
player=input('Who is your main Defender :').title()
roster.append(player)
player=input('Who is your main LB Defender :').title()
roster.append(player)
player=input('Who is your main RB Defender :').title()
roster.append(player)
player=input('Who is your front midfielder :').title()
roster.append(player)
player=input('Who is your left midfielder :').title()
roster.append(player)
player=input('Who is your Right midfielder :').title()
roster.append(player)
player=input('Who is your left winger :').title()
roster.append(player)
player=input('Who is your right winger :').title()
roster.append(player)
player=input('Who is your main first striker :').title()
roster.append(player)
player=input('Who is your main second striker  :').title()
roster.append(player)
#print(roster)
# Display
print('\n\tYour starting 11 for the upcoming football season')
print('\t\tGoal keeper:\t\t' + roster[0])
print('\t\tcentral Back :\t\t'+ roster[1])
print('\t\tLeft Back:\t\t'+ roster[2])
print('\t\tRight Back :\t\t'+ roster[3])
print('\t\tCentral Midfielder:\t\t' + roster[4])
print('\t\tleft Midfielder:\t\t' + roster[5])
print('\t\tRight Midfielder:\t\t' + roster[6])
print('\t\tLeft Winger:\t\t' + roster[7])
print('\t\tRight Winger:\t\t' + roster[8])
print('\t\tMain StrikerI:\t\t' + roster[9])
print('\t\tMain StrikerII:\t\t' + roster[10])
#Remove injured player
injured_player=roster.pop(5)
print('\n no ho , ' + injured_player + ' is injured')
roster_length =len(roster)
print('Your roster only has  ' + str(roster_length) + ' players')
#Add a player
new_player =input('Who will take ' + injured_player + " 's spot :").title()
roster.insert(5,new_player)
roster_length =len(roster)
print('\n\tYour starting 11 for the upcoming football season')
print('\t\tGoal keeper:\t\t' + roster[0])
print('\t\tcentral Back:\t\t' + roster[1])
print('\t\tLeft Back:\t\t' + roster[2])
print('\t\tRight Back:\t\t' + roster[3])
print('\t\tCentral Midfielder:\t\t'+ roster[4])
print('\t\tleft Midfielder:\t\t'+ roster[5])
print('\t\tRight Midfielder:\t\t'+ roster[6])
print('\t\tLeft Winger:\t\t' + roster[7])
print('\t\tRight Winger:\t\t' + roster[8])
print('\t\tMain StrikerI:\t\t' + roster[9])
print('\t\tMain StrikerII:\t\t' + roster[10])
print('Your roster has now ' + str(roster_length) + ' players')
print('Good luck, you are going to win the competetaion')
